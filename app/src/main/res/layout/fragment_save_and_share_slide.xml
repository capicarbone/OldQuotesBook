<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medic.quotesbook.views.fragments.slides.SaveAndShareSlideFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/author_background_8"
        android:paddingTop="@dimen/slide_padding_top"
        android:paddingLeft="@dimen/slide_padding_lateral"
        android:paddingRight="@dimen/slide_padding_lateral"
        >
        <TextView android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_share_quotes"
            android:textColor="@color/white"
            android:textSize="@dimen/slide_title"
            android:layout_marginBottom="@dimen/slide_title_margin_bottom"
            />

        <TextView android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_share_quotes"
            android:textColor="@color/white"
            android:textSize="@dimen/slide_description"
            android:layout_below="@id/title"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:scaleType="center"
            android:src="@drawable/quote_save_example"
            />

    </RelativeLayout>

</FrameLayout>
